<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".RegisterVehicle.School_vehicles">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/wallpaper" />




    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="?actionBarSize"
        android:src="@drawable/quantum_ic_arrow_back_grey600_24"
        app:tint="@color/white" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:gravity="bottom|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=" School Vehicles"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/schoolprofile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_attach_image" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/schoolregisterFullName"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/schoolregisterEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"

                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:textColor="@color/white" />
                <EditText
                    android:id="@+id/schoolregisterPhoneNumber"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="mobile number"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/schoolregisterLocation"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />
                <Spinner
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/schoolvehicleTypeSpinner"
                    android:background="#fff"
                    android:drawablePadding="10dp"

                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:entries="@array/schoolvehicle_type"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/students_type"
                    android:background="#fff"
                    android:drawablePadding="10dp"

                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:entries="@array/students_types"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/schoolregisterIdNumber"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/white"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_person"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint=" vehicle number"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/schoolregisterTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="time"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/white" />
                <EditText
                    android:id="@+id/schoolregisterDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="Desc"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/white" />


                <EditText
                    android:id="@+id/schoolregistercolleges_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:hint="School /college name"
                    android:inputType="textMultiLine"
                    android:maxLines="1"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/schoolregisterButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Register"
                    android:textStyle="bold"
                    app:cornerRadius="20dp"
                    android:backgroundTint="#4A834C"
                    app:elevation="10dp" />

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="@string/login_string"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>