<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/tourCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:cardCornerRadius="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:background="@color/black"
            android:text="Title"
            android:layout_marginBottom="-1dp"
android:gravity="center"

            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            app:cardCornerRadius="10dp"
            android:id="@+id/cv_child_item">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/trip_image"

                android:src="@color/black">



            </ImageView>


        </androidx.cardview.widget.CardView>

<!--        <TextView-->
<!--            android:id="@+id/trip_title"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:paddingLeft="10dp"-->
<!--            android:paddingTop="4dp"-->
<!--            android:paddingBottom="4dp"-->
<!--            android:text="Title"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="18sp" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/trip_Rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="Rs:"
                android:textColor="@color/white"
                android:textSize="16sp" />

        <TextView
            android:id="@+id/trip_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:text="Rs: 10000"
            android:textColor="@color/white"
            android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <TextView
                android:id="@+id/trip_planner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="4dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="trip by(faisal movers)"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/trip_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingRight="10dp"
                android:paddingBottom="4dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
        <TextView
            android:id="@+id/trip_start_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:text="kabal"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/trip_call"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/buttonbackdesign"
                android:src="@drawable/telephonecalll"

                android:text="Phone Number"
                android:textAllCaps="false" />


            <ImageView
                android:id="@+id/trip_location"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/buttonbackdesign"
                android:layout_weight="1"

                android:src="@drawable/map_button"
                android:text="Email"
                android:textAllCaps="false" />

            <ImageView
                android:id="@+id/trip_whatsapp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:background="@drawable/buttonbackdesign"
                android:src="@drawable/social"
                android:text="Email"
                android:textAllCaps="false" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/trip_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF9800"
                android:textStyle="bold"
                android:layout_marginTop="-7dp"
                android:text="trip_Detail" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deta"
            android:orientation="horizontal">
            <ImageView android:layout_height="40dp"
                android:layout_width="193dp"
                android:id="@+id/updateT"
                android:src="@drawable/baseline_edit_note_24"
                app:tint="@color/cardColor" />

            <ImageView android:layout_height="40dp"
                android:layout_width="193dp"
                android:id="@+id/deleteT"
                android:src="@drawable/baseline_delete_24"
                app:tint="@color/cardColor" />
        </LinearLayout>

        <TextView
            android:id="@+id/dash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:text="------------------------------------------------------------------------"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>