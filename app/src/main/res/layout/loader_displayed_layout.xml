<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:background="#E90E0E0E"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"

        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <ImageView

                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/loader_Image"

                android:src="@color/black">



            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/userNameLoader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:text="User Name"
                            android:textAlignment="textStart"
                            android:textAllCaps="true"
                            android:textColor="#D6D4D4"
                            android:textSize="20sp"
                            android:layout_weight="1"
                            android:textStyle="bold" />

<!--                        <TextView-->
<!--                            android:id="@+id/typeLoader"-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_margin="2dp"-->
<!--                            android:layout_weight="1"-->
<!--                            android:text="Type"-->
<!--                            android:gravity="center"-->
<!--                            android:textAllCaps="true"-->
<!--                            android:textColor="#D6D4D4"-->
<!--                            android:textSize="13sp" />-->



                    </LinearLayout>




                    <TextView
                        android:id="@+id/userLocationLoader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:src="@drawable/ic_location"
                        android:text="Location"
                        android:textAlignment="textStart"
                        android:textColor="#D6D4D4" />

                    <TextView
                        android:id="@+id/loaderVehicle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:gravity="left"
                        android:text="Vehicle type"
                        android:textColor="#D6D4D4"

                        android:textSize="20sp"
                        android:textStyle="bold" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/call_Loader"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:layout_weight="1"
android:background="@drawable/buttonbackdesign"
                        android:src="@drawable/telephonecalll"
                        android:text="Phone Number"
                        android:textAllCaps="false"

                        />


                    <ImageView
                        android:id="@+id/location_Loader"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
android:background="@drawable/buttonbackdesign"
                        android:src="@drawable/map_button"
                        android:text="Email"
                        android:textAllCaps="false" />

                    <ImageView
                        android:id="@+id/Whatsapp_Loader"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
android:background="@drawable/buttonbackdesign"
                        android:src="@drawable/whats"
                        android:text="Email"
                        android:textAllCaps="false" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardd"
        android:orientation="horizontal">
        <ImageView android:layout_height="40dp"
            android:layout_width="193dp"
            android:id="@+id/update"
            android:src="@drawable/baseline_edit_note_24"
            app:tint="@color/cardColor" />

        <ImageView android:layout_height="40dp"
            android:layout_width="193dp"
            android:id="@+id/delete"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/cardColor" />
    </LinearLayout>
</RelativeLayout>