<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView android:layout_height="50dp" android:layout_width="match_parent" android:textColor="#fff" android:gravity="center" android:textSize="25sp" android:background="@color/lavender" android:text="Update Content Panel"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp" android:layout_marginTop="10dp"
        android:id="@+id/uimgurl_T" android:hint="Image URL"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp" android:layout_marginTop="10dp"
        android:id="@+id/uvisitingPlace_T" android:hint="visit to"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="phone"
        android:textSize="20sp" android:layout_marginTop="10dp"
        android:id="@+id/uphone_T" android:hint="+92348********"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/udate_T"
        android:hint="Date"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/uvehicletype_T"
        android:hint="vehicle"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/uvehiclenumber_T"
        android:hint="vehiclenumber"/>
    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/ulocation_T"
        android:hint="Location"/>
        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/utripDuration_T"
            android:hint="3 Days"/>
        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/utripPrice_T"
            android:hint="price"/>
        <EditText android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/utripDesc_T"
            android:hint="Desc"/>


    <Button android:layout_height="wrap_content" android:layout_width="300dp" android:textColor="#fff" android:textSize="20sp" android:background="@color/lavender" android:text="Update" android:layout_marginTop="10dp" android:id="@+id/usubmit" android:layout_marginBottom="10dp" android:layout_gravity="center"/>
    </LinearLayout>
</ScrollView>
</LinearLayout>